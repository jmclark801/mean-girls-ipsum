<div>
	<h1>Love us? Let us know!</h1>
</div>
<form id="addComment">
	<div class="form-group">
		<!-- First Name -->
		<label for="comment">Comment</label>
		<input type="text" class="form-control" id="firstName" name="firstName" placeholder="Give us feedback!">
	</div>

	<div class="form-group">
		<!-- Email Address -->
		<label for="emailAddress">Email Address</label>
		<input type="text" class="form-control" id="emailAddress" name="emailAddress" placeholder="Email Address">
	</div>
	<input type="submit" value="Submit" id="submit" class="btn btn-primary">

  <div id="comments">
  {{#each comments}}
    <ul>
      <li>{{comment}}</li>
      <li>{{email}}</li>
    </ul>
  {{/each}}
</div>
</form>