<div>
	<h1>Love us? Let us know!</h1>
</div>
<form id="addComment">
	<div class="form-group">
		<!-- Comment -->
		<label for="comment">Comment</label>
		<input type="text" class="form-control" id="comment" name="comment" placeholder="Give us feedback!">
	</div>

	<div class="form-group">
		<!-- Email Address -->
		<label for="emailAddress">Email Address</label>
		<input type="text" class="form-control" id="email" name="email" placeholder="Email Address">
	</div>
	<input type="submit" value="Submit" id="submit" class="btn btn-primary">
</form>
<h1>See what our users have to say:</h1>
<div id="comments">
	{{#each comments}}
	<ul>
		<li>{{comment}}</li>
	</ul>
	{{/each}}
</div>
